html, body
    min-width: 320px
    min-height: 240px

    margin: 0px
    border: 0px
    padding: 0px

.container
    width: 100%
    height: 1080px

.block
    position: relative
    height: 100%
    
    float: left

for num in (100..1)
    .block--{num}
        width: (100% / num)
         

for key, value in colors
    .color--{ key }
        color: s(value)
    
    .bg--{ key }
        background: s(value)